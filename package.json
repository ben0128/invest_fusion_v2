{
	"name": "invest-fusion",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --watch apps/web/app/server.ts",
		"dev:web": "bun run apps/web/app/server.ts",
		"dev:regional": "wrangler dev workers/regional/src/index.ts ",
		"dev:price": "wrangler dev workers/price-service/src/index.ts ",
		"publish:price": "cd workers/price-service && wrangler publish",
		"publish:regional": "cd workers/regional && wrangler publish",
		"publish:all": "bun run publish:price && bun run publish:regional",
		"dry:all": "bun run dry:price && bun run dry:regional",
		"dry:price": "cd workers/price-service && wrangler deploy --dry-run",
		"dry:regional": "cd workers/regional && wrangler deploy --dry-run",
		"lint": "bunx eslint . --ext .ts,.tsx,.js,.jsx --fix",
		"format": "bunx prettier --write .",
		"typecheck": "bun tsc --noEmit",
		"cf-typegen": "cd workers/regional && wrangler types && cd ../price-service && wrangler types && cd ../.. && tsc"
	},
	"dependencies": {
		"@binance/connector": "^3.0.0",
		"@cloudflare/workers-types": "^4.20241004.0",
		"@hono/zod-validator": "^0.4.2",
		"eslint-import-resolver-typescript": "^3.7.0",
		"hono": "^4.5.1",
		"next": "14.0.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ws": "^8.15.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"bun-types": "latest",
		"eslint": "^8.56.0",
		"eslint-config-next": "14.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^3.1.1",
		"typescript": "^5.0.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
