{
	"name": "invest-fusion",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --watch apps/web/app/server.ts",
		"dev:web": "bun run apps/web/app/server.ts",
		"dev:regional": "wrangler dev workers/regional/src/index.ts --env development",
		"dev:price": "wrangler dev workers/price-service/src/index.ts --env development",
		"build:shared": "bun build ./shared/types/index.ts --outdir ./dist/shared",
		"build:regional": "bun build ./workers/regional/src/index.ts --outdir ./dist/workers/regional/src",
		"build:price": "bun build ./workers/price-service/src/index.ts --outdir ./dist/workers/price-service/src",
		"build:all": "bun run build:shared && bun run build:regional && bun run build:price",
		"deploy:regional": "bun run build:all && wrangler deploy -c workers/regional/wrangler.toml",
		"deploy:price": "bun run build:all && wrangler deploy -c workers/price-service/wrangler.toml",
		"deploy:all": "bun run deploy:price && bun run deploy:regional",
		"lint": "bunx eslint . --ext .ts,.tsx,.js,.jsx --fix",
		"format": "bunx prettier --write .",
		"typecheck": "bun tsc --noEmit"
	},
	"dependencies": {
		"@binance/connector": "^3.0.0",
		"@cloudflare/workers-types": "^4.20231218.0",
		"@hono/zod-validator": "^0.4.2",
		"eslint-import-resolver-typescript": "^3.7.0",
		"hono": "^3.11.7",
		"next": "14.0.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ws": "^8.15.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"bun-types": "latest",
		"eslint": "^8.56.0",
		"eslint-config-next": "14.0.4",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^3.1.1",
		"typescript": "^5.0.0"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
